# Python program for Bubble Sort

num = int(input("Number of student : "))
arr = []
for i in range(num):
    a = float(input("Percentage of student : "))
    arr.append(a)

print("-----------------------------------------")
print("Unsorted percentage of student : ")
print(arr)
print("------------------------------------------------------------")
n = len(arr)

for i in range (0,n):
    swapped=0
    j=0
    for j in range (0, n-j-1):
        if (arr[j]>arr[j+1]):
            arr[j], arr[j+1] = arr[j+1], arr[j]
            swapped=1
        # elif (swapped==0):
        #     break
        j+=1
    i+=1
print("Sorted percentage of students : ")
print(arr)
print("------------------------------------------------------------")

print("Top 5 percentage of students : ")
arr1 = []
for i in range(0,n):
    arr1.append(arr[i])
    arr2 = arr1[::-1]
print(arr2[:5])
print("------------------------------------------------------------")









# Python program for Selection Sort

num = int(input("Number of students : "))
arr = []
for i in range(num):
    a = float(input("Percentage of student : "))
    arr.append(a)

print("--------------------------------------------------------")
print("Unsorted percentage of student : ")
print(arr)
print("--------------------------------------------------------")
n = len(arr)

for i in range (1, n):
    key = arr[i]
    j = i-1
    while (j>=0 and arr[j]>key):
        arr[j+1] = arr[j]
        j = j-1
    arr[j+1] = key

print("Sorted percentage of student : ")
print(arr)
print("--------------------------------------------------------")

print("Top 5 percentage of student : ")
arr1 = [ ]
for i in range(0,n):
    arr1.append(arr[i])
    arr2 = arr1[::-1]
print(arr2[:5])
print("--------------------------------------------------------")



# Python program for Insertion Sort

num = int(input("How many elements do you want?"))
arr = []
for i in range(num):
    a = int(input())
    arr.append(a)

print("-----------------------------------------")
print("Unsorted array : ")
print(arr)
print("-----------------------------------------")
n = len(arr)

for i in range (1, n):
    key = arr[i]
    j = i-1
    while (j>=0 and arr[j]>key):
        arr[j+1] = arr[j]
        j = j-1
    arr[j+1] = key

print("Sorted array : ")
print(arr)
print("-----------------------------------------")
